# .env.example (예시 파일)
# 이 파일을 복사하여 .env.local 파일을 생성하세요

# Socket.io 서버 URL
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# 메시지 암호화를 위한 비밀 키 (보안상 반드시 변경하세요)
NEXT_PUBLIC_ENCRYPTION_KEY=your-secret-key-here

# 파일 업로드 최대 크기 (기본값: 10MB)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760

# 개발/프로덕션 환경
NODE_ENV=development

# Socket.io 서버 포트 (서버 측에서 사용)
PORT=3001

# 디버그 로그 활성화 (개발 시에만)
DEBUG=socket.io:*